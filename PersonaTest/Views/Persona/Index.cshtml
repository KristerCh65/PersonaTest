
@model List<Persona>

    @{
    ViewData["Title"] = "Personas";
}

<h1>Personas</h1>

<p>
    <a asp-action="Create" asp-controller="Persona">Crear Nueva Persona</a>
</p>

<table class="table table-hover"> 
    <thead>
        <tr>
            <th>
                Identidad
            </th>
            <th>
                Nombre Completo
            </th>
            <th>
                Fecha de Nacimiento
            </th>
            <th>
                Genero
            </th>
            <th>
                Direccion
            </th>
            <th>
                Telefono
           </th>
           <th>
               Acciones
           </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persona in Model)
        {
            <tr>
                <td>@Html.DisplayFor(p=>persona.Identidad)</td>
                <td>@Html.DisplayFor(p=>persona.NombreCompleto)</td>
                <td>@Html.DisplayFor(p=>persona.FechaNacimiento)</td>
                <td>@Html.DisplayFor(p=>persona.Genero)</td>
                <td>@Html.DisplayFor(p=>persona.Direccion)</td>
                <td>@Html.DisplayFor(p=>persona.Telefono)</td>
                <td>
                    <a asp-action="Details" asp-controller="Persona" asp-route-id="@persona.Identidad" class="bg-info">Detalles</a>
                    <a asp-action="Edit" asp-controller="Persona" asp-route-id="@persona.Identidad" class="bg-warning">Editar</a>
                    <a asp-action="Delete" asp-controller="Persona" asp-route-id="@persona.Identidad" onclick="return confirm('Estás seguro que deseas eliminar el registro?');" class="bg-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
