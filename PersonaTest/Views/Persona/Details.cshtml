@model PersonaTest.Models.Persona

<h1>Detalles de Persona </h1>

<hr />

<div class="row">
    <div>
        <span class="text-primary">Detalles de Registro de @Html.DisplayFor(p => p.Identidad) </span>
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
            <div class="form-group">
                <label asp-for="Identidad" class="control-label"></label>
                <input asp-for="Identidad" class="form-control" disabled/>
                <span asp-validation-for="Identidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCompleto" class="control-label"></label>
                <input asp-for="NombreCompleto" class="form-control" disabled />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" disabled />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" disabled />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" disabled />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" disabled />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" asp-controller="Persona" class="btn btn-outline-info">Regresar</a>
            </div>
        </form>
    </div>
</div>